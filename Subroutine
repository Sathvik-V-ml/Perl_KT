#references in perl
my $x = 9;
$ref =  \$x;
print "the ADDRESS pf x is : $ref";
print "the value pf x is : $$ref";

my @y = "1,2,3,4,,5,5,6,6,7,7";
$ref1 = \@y;
print "the ADDRESS pf y is : @$ref1";





